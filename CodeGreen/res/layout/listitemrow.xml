<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:id="@+id/RelativeLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android" android:minHeight="70dip"
	android:layout_width="fill_parent" android:layout_height="70dip">
	<TextView android:layout_alignParentTop="true" android:id="@+id/textArticle"
		android:text="@+id/TextView01" android:layout_toLeftOf="@+id/ImgThumbnail"
		android:layout_alignParentLeft="true" android:layout_marginTop="5dip"
		android:layout_width="wrap_content" android:maxLines="3"
		android:textStyle="bold" android:layout_height="wrap_content"
		android:textColor="#000000" android:layout_marginLeft="5dip"
		android:layout_marginRight="10dip"></TextView>
	<ImageView android:id="@+id/ImgThumbnail"
		android:layout_alignParentRight="true" android:layout_width="70dip"
		android:layout_marginRight="15dip" android:layout_centerInParent="true"
		android:layout_height="60dip"></ImageView>
</RelativeLayout>
