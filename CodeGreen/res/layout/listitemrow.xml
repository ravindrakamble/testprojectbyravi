<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/list_row"
	 xmlns:android="http://schemas.android.com/apk/res/android"
	android:minHeight="80dip" android:layout_width="fill_parent"
	android:layout_height="80dip" android:background="@drawable/listitem_selector">
<!-- android:background="@drawable/list_unselected_back" -->

	<ImageView android:id="@+id/ImgThumbnail"
		android:layout_alignParentLeft="true" android:layout_width="64dip"
		android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
		android:layout_centerInParent="true" android:layout_height="64dip"></ImageView>
		
    <ProgressBar
    android:layout_centerInParent="true"
      android:layout_marginLeft="22dip"
      android:layout_alignParentLeft="true"
      android:id="@+id/progress_bar"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:maxWidth="30dip"
      android:layout_marginRight="5dip"
      android:minWidth="30dip"
      android:maxHeight="30dip"
      android:minHeight="30dip"
      style="?android:attr/progressBarStyleInverse"
      android:indeterminate="true" />
		
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_toRightOf="@+id/ImgThumbnail" android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/Imgarrow">
		<TextView android:layout_alignParentTop="true" android:id="@+id/textArticle"
			android:text="@+id/TextView01" android:layout_marginTop="5dip"
			android:layout_width="fill_parent" android:singleLine="true"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_marginLeft="5dip" android:textSize="18dip"
			android:layout_marginRight="5dip"></TextView>
		<TextView android:id="@+id/textArticledesc" android:text="@+id/TextView02"
			android:layout_marginTop="5dip"
			android:layout_width="fill_parent" android:singleLine="true"
			android:layout_below="@+id/textArticle"
		    android:layout_height="wrap_content" android:textSize="15dip"
			android:textColor="#000000" android:layout_marginLeft="10dip"
			android:layout_marginRight="5dip"></TextView>
	</RelativeLayout>
	<ImageView android:id="@+id/Imgarrow" android:background="@drawable/arrow_back_selector"
		android:layout_alignParentRight="true" android:layout_width="wrap_content"
		android:layout_toRightOf="@+id/TextView01" android:layout_marginRight="10dip"
		android:layout_centerInParent="true" android:layout_height="wrap_content"></ImageView>
</RelativeLayout>
