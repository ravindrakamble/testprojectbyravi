<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#FFFFFF">
	<RelativeLayout android:id="@+id/codegreenTitle"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:layout_gravity="center">
		<TextView android:text="CodeGreen" android:textColor="#000000"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:gravity="center" android:layout_centerInParent="true"
			android:textSize="20dip" android:layout_width="wrap_content"></TextView>
		<ImageView android:id="@+id/btn_media"
			android:layout_centerVertical="true" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@drawable/norgie"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip" />
	</RelativeLayout>

	<LinearLayout android:visibility="gone"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/progress_lay"
		android:layout_centerInParent="true">
		<ProgressBar android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Small"
			android:layout_marginRight="5dp" />
		<TextView android:layout_width="wrap_content"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:text="Loading..." />
	</LinearLayout>

	<RelativeLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_alignParentLeft="true"
		android:layout_below="@+id/codegreenTitle" android:background="@drawable/titlebar" 
		android:orientation="horizontal" android:layout_height="40dip">
		<!--<ImageView android:id="@+id/ImageView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/rightnavigation"
			android:layout_gravity="right|center_vertical"
			android:layout_centerVertical="true" android:visibility="gone"></ImageView>
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:id="@+id/ImageView03" android:background="@drawable/corner_left"
			android:layout_toRightOf="@+id/ImageView01"></ImageView>
		--><HorizontalScrollView android:layout_marginLeft="25dip" android:id="@+id/HorizontalScrollView01"
			android:layout_width="wrap_content" android:layout_centerVertical="true"
			android:scrollbars="none"  android:layout_marginRight="25dip"
			android:layout_height="fill_parent"
			>
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
				<TextView android:id="@+id/btn_latest" android:text="Latest"
					android:textColor="#FFFFFF" android:paddingLeft="10dip"
					android:gravity="center" android:textSize="12sp" android:background="@drawable/selectedbutton"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:id="@+id/btn_green_basics" android:text="Green Basics"
					android:textColor="#FFFFFF" android:paddingLeft="10dip"
					android:gravity="center" android:textSize="12sp"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true"
					android:textColor="#FFFFFF" android:text="Design and Architecture"
					android:id="@+id/btn_design" android:gravity="center"
					android:textSize="12sp"  android:paddingLeft="10dip"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:paddingLeft="10dip"
					android:textColor="#FFFFFF" android:text="Science and Technology"
					android:id="@+id/btn_secience" android:gravity="center"
					android:textSize="12sp" 
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:paddingLeft="10dip"
					android:textColor="#FFFFFF" android:text="Transport and travel"
					android:id="@+id/btn_transport" android:gravity="center"
					android:textSize="12sp" android:layout_gravity="center"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:paddingLeft="10dip"
					android:textColor="#FFFFFF" android:id="@+id/btn_business"
					android:text="Business/Investment"
					android:gravity="center" android:textSize="12sp"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:paddingLeft="10dip"
					android:textColor="#FFFFFF" android:id="@+id/btn_politics"
					android:text="Politics/Policies"
					android:gravity="center" android:textSize="12sp"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:paddingLeft="10dip"
					android:textColor="#FFFFFF" android:id="@+id/btn_food"
					android:text="Food and Health"
					android:gravity="center" android:textSize="12sp" android:paddingRight="10dip"
					android:layout_gravity="center" android:layout_height="fill_parent"
					android:layout_width="wrap_content"></TextView>
			</LinearLayout>

		</HorizontalScrollView><!--
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:background="@drawable/corner_right" android:id="@+id/ImageView04"
			android:layout_alignRight="@+id/ImageView02"></ImageView>
		--><ImageView android:id="@+id/ImageView02"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/leftnavigation"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			android:visibility="invisible"></ImageView>

	</RelativeLayout>
	<ListView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_below="@+id/LinearLayout01" android:clickable="true"
		android:scrollbarDefaultDelayBeforeFade="100" android:fadeScrollbars="true"
		android:layout_above="@+id/relativeLayout1" android:id="@android:id/list"></ListView>
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<LinearLayout android:id="@+id/admarvel"
			android:layout_width="fill_parent" android:layout_height="50dip"></LinearLayout>
	</RelativeLayout>


	<TextView android:id="@+id/android:empty" android:gravity="center"
		android:visibility="gone" android:layout_gravity="center_horizontal|center_vertical"
		android:text="No data Found." android:textStyle="bold"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />
</RelativeLayout>
