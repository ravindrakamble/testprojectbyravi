<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#FFFFFF">
	<RelativeLayout android:id="@+id/codegreenTitle"  android:background="@drawable/bg_topbar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		>
		<ImageView android:id="@+id/btn_media" 
			android:layout_centerVertical="true" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@drawable/norgi_selector"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip" />
	</RelativeLayout>

	<RelativeLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_alignParentLeft="true"
		android:layout_below="@+id/codegreenTitle" android:background="@drawable/titlebar" 
		android:orientation="horizontal" android:layout_height="40dip">
		<ImageView android:id="@+id/ImageView02" android:layout_marginRight="3dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/left_arrow" android:layout_marginLeft="3dip"
			android:layout_centerVertical="true" android:layout_alignParentLeft="true"
			></ImageView>
		<HorizontalScrollView android:layout_marginLeft="25dip" android:id="@+id/HorizontalScrollView01"
			android:layout_width="wrap_content" android:layout_centerVertical="true"
			android:scrollbars="none"  android:layout_marginRight="25dip"
			android:layout_height="fill_parent"
			>
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_width="wrap_content" android:layout_gravity="center_vertical"
				android:layout_height="fill_parent">
				<TextView android:id="@+id/btn_latest" android:text="LATEST"
					android:textColor="#FFFFFF" android:layout_marginLeft="10dip"
					android:gravity="center" android:textSize="12sp" android:background="@drawable/tabbtn_selector"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:id="@+id/btn_green_basics" android:text="GREEN BASICS"
					android:textColor="#FFFFFF" android:layout_marginLeft="10dip"
					android:gravity="center" android:textSize="12sp" android:background="@drawable/tabbtn_selector"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true"
					android:textColor="#FFFFFF" android:text="@string/str_design_arech"
					android:id="@+id/btn_design" android:gravity="center" android:background="@drawable/tabbtn_selector"
					android:textSize="12sp"  android:layout_marginLeft="10dip"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:textColor="#FFFFFF" android:text="@string/str_sci_tech"
					android:id="@+id/btn_secience" android:gravity="center"
					android:textSize="12sp" android:background="@drawable/tabbtn_selector"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:textColor="#FFFFFF" android:text="@string/str_trans"
					android:id="@+id/btn_transport" android:gravity="center"
					android:textSize="12sp" android:layout_gravity="center" android:background="@drawable/tabbtn_selector"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:textColor="#FFFFFF" android:id="@+id/btn_business"
					android:text="BUSINESS/INVESTMENT" android:background="@drawable/tabbtn_selector"
					android:gravity="center" android:textSize="12sp"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:textColor="#FFFFFF" android:id="@+id/btn_politics"
					android:text="POLITICS/POLICIES" android:background="@drawable/tabbtn_selector"
					android:gravity="center" android:textSize="12sp"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
				<TextView android:layout_alignParentLeft="true" 
					android:textColor="#FFFFFF" android:id="@+id/btn_food" android:background="@drawable/tabbtn_selector"
					android:text="@string/str_food_health" android:layout_marginRight="10dip"
					android:gravity="center" android:textSize="12sp" android:layout_marginLeft="10dip"
					android:layout_gravity="center" android:layout_height="wrap_content"
					android:layout_width="wrap_content"></TextView>
			</LinearLayout>

		</HorizontalScrollView>
		<ImageView android:id="@+id/ImageView02" android:layout_marginRight="3dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/right_arrow"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			></ImageView>

	</RelativeLayout>
	<ListView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_below="@+id/LinearLayout01" android:clickable="true"
		android:scrollbarDefaultDelayBeforeFade="100" android:fadeScrollbars="true"
		android:layout_above="@+id/relativeLayout1" android:id="@android:id/list"></ListView>
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<LinearLayout android:id="@+id/admarvel" android:background="@drawable/bg_ads_sample"
			android:layout_width="fill_parent" android:layout_height="50dip"></LinearLayout>
	</RelativeLayout>


	<TextView android:id="@+id/android:empty" android:gravity="center"
		android:visibility="gone" android:layout_gravity="center_horizontal|center_vertical"
		android:text="No data Found." android:textStyle="bold"
		android:layout_width="fill_parent" android:layout_height="fill_parent" />
</RelativeLayout>
