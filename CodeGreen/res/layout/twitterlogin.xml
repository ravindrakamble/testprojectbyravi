<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#C2DFFF">
	<ImageView
		android:id="@+id/backgroundImageView"
		android:src="@drawable/twitterclouds"
		android:layout_width="fill_parent"
		android:scaleType="centerCrop"
		android:layout_height="50dip"></ImageView>
	<ImageView
		android:layout_height="wrap_content"
		android:src="@drawable/twitterlogo"
		android:id="@+id/logoImageView"
		android:paddingTop="5dip"
		android:layout_alignLeft="@+id/relativeLayout1"
		android:layout_width="wrap_content"
		android:paddingLeft="10dip"></ImageView>
	<FrameLayout
		android:id="@+id/frameLayout1"
		android:layout_below="@+id/backgroundImageView"
		android:layout_width="fill_parent"
		android:layout_height="360dip"
		android:background="#FFFFFF"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip">
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<RelativeLayout
				android:id="@+id/relativeLayout2"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10dip">

				<TextView
					android:id="@+id/usernamelabel"
					android:layout_height="wrap_content"
					android:layout_below="@+id/signinTextView"
					android:layout_marginTop="5dip"
					android:layout_width="wrap_content"
					android:layout_marginLeft="5dip"
					android:textColor="#000000"
					android:text="Username or email"></TextView>
				<EditText
					android:layout_below="@+id/usernamelabel"
					android:id="@+id/usernameEditText"
					android:layout_height="50dip"
					android:layout_width="fill_parent"
					android:layout_marginLeft="3dip"
					android:singleLine="true"></EditText>
				<TextView
					android:id="@+id/signinTextView"
					android:textColor="#000000"
					android:paddingLeft="5dip"
					android:layout_height="20dip"
					android:text="Sign in!"
					android:background="#bde9ef"
					android:layout_width="fill_parent"></TextView>
				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textColor="#000000"
					android:layout_marginLeft="5dip"
					android:layout_below="@+id/usernameEditText"
					android:text="Password"
					android:id="@+id/passwordTextView"></TextView>
				<EditText
					android:layout_height="50dip"
					android:layout_width="fill_parent"
					android:id="@+id/passwordEditText"
					android:layout_below="@+id/passwordTextView"
					android:layout_marginLeft="3dip"
					android:singleLine="true"
					android:password="true"></EditText>
				<TextView
					android:id="@+id/postlabel"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					android:layout_below="@+id/passwordEditText"
					android:layout_marginTop="5dip"
					android:layout_width="fill_parent"
					android:layout_marginLeft="5dip"
					android:textColor="#000000"
					android:text="Update Status - up to 140 characters allowed"></TextView>
				<EditText
					android:layout_below="@+id/postlabel"
					android:id="@+id/status_msg"
					android:layout_height="80dip"
					android:layout_width="fill_parent"
					android:layout_marginLeft="3dip"
					android:maxLines="5"></EditText>
				<Button
					android:id="@+id/signinButton"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@id/status_msg"
					android:text="Sign In and Twit"></Button>
			</RelativeLayout>
		</ScrollView>
	</FrameLayout>
</RelativeLayout>
